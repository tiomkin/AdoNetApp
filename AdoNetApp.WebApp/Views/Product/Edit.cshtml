@model Product
<h1>@ViewData["Title"]</h1>
<p>@TempData["Message"]</p>
<form asp-action="Edit" asp-controller="Product" method="post">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Name"></label>
        <div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <textarea class="form-control" asp-for="Description" cols="15" rows="10"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <div>
            <span class="text-danger" asp-validation-for="Weight"></span>
        </div>
        <input class="form-control" type="text" asp-for="Weight" />
    </div>
    <div class="form-group">
        <label asp-for="Height"></label>
        <div>
            <span class="text-danger" asp-validation-for="Height"></span>
        </div>
        <input class="form-control" type="text" asp-for="Height" />
    </div>
    <div class="form-group">
        <label asp-for="Width"></label>
        <div>
            <span class="text-danger" asp-validation-for="Width"></span>
        </div>
        <input class="form-control" type="text" asp-for="Width" />
    </div>
    <div class="form-group">
        <label asp-for="Length"></label>
        <div>
            <span class="text-danger" asp-validation-for="Length"></span>
        </div>
        <input class="form-control" type="text" asp-for="Length" />
    </div>
    <button class="btn btn-success" type="submit" asp-action="Edit">@ViewData["AddOrEditButton"]</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>